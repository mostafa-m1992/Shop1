<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/profileavatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/circleImageUser"/>

                <TextView
                    android:id="@+id/textLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="left"
                    android:padding="5dp"
                    android:text="login / register"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:src="@drawable/ic_baseline_home_24"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:text="Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:src="@drawable/ic_baseline_category_24"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:text="Category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:src="@drawable/ic_baseline_shopping_basket_24"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:text="Shopping Basket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:src="@drawable/ic_baseline_wb_incandescent_24"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:text="Most Sells"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:src="@drawable/ic_baseline_fiber_new_24"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:text="newest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:src="@drawable/ic_baseline_visibility_24"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:text="The Most Visited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <View
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:src="@drawable/ic_baseline_settings_24"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:text="Setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:src="@drawable/ic_baseline_supervised_user_circle_24"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:tint="@color/black"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:text="About Us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</LinearLayout>