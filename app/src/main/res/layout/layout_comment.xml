<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.MaterialComponents.CardView"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    android:layout_margin="4dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageUserComment"
                android:layout_width="50dp"
                android:layout_margin="5dp"
                android:src="@drawable/profileavatar"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/black"
                android:layout_height="50dp" />

            <TextView
                android:textSize="15sp"
                android:id="@+id/textUserComment"
                android:textColor="@color/black"
                android:text="first@mail.com"
                android:gravity="center_vertical|right"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/textCommnet"
            android:layout_margin="5dp"
            android:text="some text"
            android:textSize="13dp"
            android:justificationMode="inter_word"
            android:padding="5dp"
            android:textColor="@color/black"
            android:gravity="center_vertical|left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:tint="@color/teal_200" />

            <TextView
                android:id="@+id/textPosotiveComment"
                android:text="this phone is perfect"
                android:textColor="@color/teal_200"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:tint="#E91E63" />

            <TextView
                android:id="@+id/textNegativeComment"
                android:text="This phone is not good"
                android:textColor="#E91E63"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:layout_gravity="center_horizontal"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ratingbarcomment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatRatingBar>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>