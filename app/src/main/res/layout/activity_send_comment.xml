<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySendComment"
    android:layoutDirection="ltr">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editComment"
            android:hint="Submit a comment"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="#e2e2e2"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr">

            <TextView
                android:text="Product strengths"
                android:textColor="@color/teal_200"
                android:textSize="13sp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical|left"
                android:layout_weight="0.35"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/editPositiveComment"
                android:textSize="17sp"
                android:background="#e2e2e2"
                android:padding="5dp"
                android:layout_weight="0.65"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="ltr">

            <TextView
                android:text="Product weaknesses"
                android:textColor="#E91E63"
                android:textSize="13sp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical|left"
                android:layout_weight="0.35"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/editNegativeComment"
                android:textSize="17sp"
                android:background="#e2e2e2"
                android:padding="5dp"
                android:layout_weight="0.65"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingbarFinal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnComment"
        android:textAllCaps="false"
        android:text="Submit a Comment"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>